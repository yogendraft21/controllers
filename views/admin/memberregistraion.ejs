<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Document</title>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>
        <link rel="stylesheet" href="/admin/css/style.css">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
    </head>
    <style>
        label.label input[type="file"] {
          position: absolute;
          top: -1000px;
        }
        .label {
          cursor: pointer;
          border: 1px solid #cccccc;
          border-radius: 5px;
          display: inline-block;
        }
       .label:hover{
          border: 1px solid black;
       }
       #reg img{
          width: 100px;
          height: 100px;
       }
       #bla{
          width: 100px;
          height: 50px;
       }
      </style>
<body>
    
    <%- include("../../partials/header.ejs")%>
    <%- include("../../partials/sidebar.ejs")%>

    <section class="home-section">
        <section id="reg">
    <h2 >Registration</h2>

    <form action="/memberregistraion" method="post" enctype="multipart/form-data">
        <div class="container">
            <div class="row">
                
                <div class="col-md-4">
                    <div class="form-floating">
                    
                    <select name="ctype" id="" class="form-select" required>
                        <option value="Private">Private</option>
                        <option value="limited">limited</option>
                        <option value="partnership">partnership</option>
                        <option value="opc">opc</option>
                    </select> <label for="">Company Type</label>
                </div>
                    <br>
                    <div class="form-floating">
                    <input type="text" id="aadhar" required class="form-control" name="owneraadharn" pattern="['0-9']{12}" title="Please enter a valid aadhar number" minlength="12" maxlength="12" onkeyup="validate()" placeholder="Owner Aadhar Number">
                    <label for="">Owner Aadhar Number</label>
                    <small id="aadhar-error"></small>
                </div>
                    <br>
                    <div class="form-floating">
                    <input type="text" required class="form-control" id="oname" name="ownername" pattern="[A-Za-z]*\s{1}[a-zA-Z]*" placeholder="Owner Name" onkeyup="onamevalidate()">
                    <label for="">Owner Name</label>
                    <small id="ownername-error"></small>
                </div>
                    <br>
                    <div class="form-floating">
                    <input type="text" required class="form-control" id="cpann" name="companypann" pattern="[A-Z]{5}[0-9]{4}[A-Z]{1}" title="Please enter a valid pan card number" placeholder="Company Pan Number " onkeyup="cpanvalidate()">
                    <label for="">Company Pan Number </label>
                    <small id="cpan-error"></small>
                </div>
                    <br>
                    <div class="form-floating">
                    <textarea name="companyadd" id="" cols="60" rows="60" required class="form-control" placeholder="Company Located Address"></textarea>
                    <label for="">Company Located Address </label>
                </div>
                    <br>
                    <div class="form-floating">
                    <input type="text" name="accountholdername" id="" required class="form-control" name="acholdername"  pattern="[A-Za-z]*\{1}[a-zA-Z]*" placeholder="Account Holder Name">
                    <label for="">Account Holder Name</label>
                </div>

                    <br>
                    <div class="form-floating">
                    <select name="service" id="" class="form-select" required>
                        <option value="banking">BANKING</option>
                        <option value="goverment">GOVERMENT</option>
                        <option value="game">GAME</option>
                        <option value="software">SOFTWARE</option>
                        <option value="financial">FINANCIAL</option>
                        <option value="seo">SEO</option>
                    </select>
                    <label for="">Service Asign</label>
                </div>
                    <br>
                   <label for="">Mobile Number</label>
                   <div class="form-check ">
                   <select name="contrycode" id="" >
                    <%contrycodes.forEach((result,key)=>{%>
                        <option value="<%= result.dial_code%>"><%= result.dial_code%></option> 
                   <%})%>
                   </select>
                   <input type="text" name="mobile" id="mobile" required pattern="[0-9]{10}" title="Please enter a valid Mobile number"  maxlength="10" minlength="10" onkeyup="mobilevalidation()">
                   <small id="mobile-error"></small>
                </div>
                   <br> 
                   <div class="form-floating">
                    <input type="file" name="gstimage" id="" class="form-control" accept="application/pdf" required title="GST Image">
                    <label for="">GST Image</label>
                </div>
                    <br>
                    <div class="form-floating">
                    <input type="file" name="opanimg" id="" class="form-control" accept=".jpg,.png" required >
                    <label for="">Owner Pan Card Image</label>
                </div>
                </div>
                <div class="col-md-4">
                    <div class="form-floating">
                    
                    <input type="text" required class="form-control" name="companyname" placeholder="Company Name"><label for="" >Company Name</label>
                </div>
                    <br>
                    <div class="form-floating">
                    <input type="text" required class="form-control" id="pan" name="ownerpann" pattern="[A-Z]{5}[0-9]{4}[A-Z]{1}" title="Please enter a valid pan card number" placeholder="Owner Pan Card Number" onkeyup="panvalidate()">
                    <label for="">Owner Pan Card Number</label>
                    <small id="pan-error"></small>
                </div>
                  
                    <br>
                    <div class="form-floating">
                    <input type="text" required class="form-control" name="gstn" placeholder="Gst Number">
                    <label for="">Gst Number</label>
                </div>
                    <br>
                    <div class="form-floating">
                    <input type="number" required class="form-control" name="acnumber" placeholder="Bank Account Number">
                    <label for="">Bank Account Number</label>    
                </div>
                    <br>
                    <div class="form-floating">
                    <input type="text"  id="" required class="form-control" name="ifsccode" placeholder="IFSC Code">
                    <label for="">IFSC Code</label>
                </div>
                    <br>
                    <div class="form-floating">
                    <input type="url" name="domain" id="" class="form-control" required placeholder="Domain">
                    <label for="">Domain</label>
                </div>
                    <br>
                    <div class="form-floating">
                    <input type="file" name="afimg" id="" class="form-control" accept=".jpg,.png" required>
                    <label for="">Aadhar Front Image</label>
                </div>
                    <br>
                    <div class="form-floating">
                    <input type="file" name="cpanimg" id="" class="form-control" accept="application/pdf" required>
                    <label for="">Company Pan Card Image</label>
                </div>
                    <br>
                    <div class="form-floating">
                    <input type="file" name="cinimg" id="" class="form-control" accept="application/pdf" required placeholder="CIN Image">
                    <label for="">CIN Image</label>
                </div>
                <br>
                <div class="form-floating">
                <input type="file" name="payslip" id="" class="form-control" accept="application/pdf" required>
                <label for="">Payment Slip</label>
            </div>
                </div>

                   
                <div class="col-md-4">
                    <div class="mx-auto" style="margin-left: 100px;">
                        <label class="label">
                        <input type="file" name="ownerimg" id="imgInp" class="form-control" required accept=".jpg,.png">
                        <span><img id="blah" src="/admin/media/upload.png" alt="your image" /></span>
                        
                        </label>
                        <br>
                        <label class="label">
                            <input type="file" name="sign" id="sign" class="form-control" required accept=".jpg,.png">
                            <span><img id="bla" src="/admin/media/rr.png" alt="your image" /></span>
                            </label>
                        </div>
                    <br><br>
                    <div class="form-floating">
                    <input type="text" required class="form-control" name="cinnumber" placeholder="CIN Number">
                    <label for="">CIN Number</label>
                </div>
                    <br>
                    <div class="form-floating">
                    <input type="email" name="email" id=""  required class="form-control" placeholder="Email">
                    <label for="">Email</label>
                </div>
                    <br>
                    <div class="form-floating">
                    <textarea name="owneradd" id="" cols="30" rows="30" class="form-control" required placeholder="Owner Address"></textarea>
                    <label for="">Owner Address</label>
                </div>
                    <br>
                    <div class="form-floating">
                    <input type="text" required class="form-control" name="bankname" placeholder="Bank Name ">
                    <label for="">Bank Name </label>
                </div>
                    <br>
                    <div class="form-floating">
                        <select name="actype" id="" required class="form-select">
                            <option value="Current">Current</option>
                            <option value="Saving">Saving</option>
                            <option value="Joint">Joint</option>
                        </select>
                    <label for="">Account Type</label>
                </div>
                    <br>
                    <div class="form-floating">
                   <input type="text" name="ip" id="" required class="form-control" pattern="[0-9]{3}\.[0-9]{3}\.[0-9]{3}.[0-9]*" placeholder="IP">
                   <label for="">IP</label>
                </div>
                   <br> 
                   <div class="form-floating">
                    <input type="file" name="abimg" id="" class="form-control" accept=".jpg,.png" required>
                    <label for="">Aadhar Back Image</label>
                </div>
                   
                
            </div>
            <button type="submit" style="width: 200px;" class=" btn btn-success mt-3 mb-3 mx-auto">Register</button>
        </div>
    </form>


</section>
    
</section>




<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js"></script>    
<script src="/admin/js/script.js"></script>
<script>
  let arrow = document.querySelectorAll(".arrow");
  for (var i = 0; i < arrow.length; i++) {
    arrow[i].addEventListener("click", (e)=>{
   let arrowParent = e.target.parentElement.parentElement;//selecting main parent of arrow
   arrowParent.classList.toggle("showMenu");
    });
  }
  let sidebar = document.querySelector(".sidebar");
  let sidebarBtn = document.querySelector(".bx-menu");
  console.log(sidebarBtn);
  sidebarBtn.addEventListener("click", ()=>{
    sidebar.classList.toggle("close");
  });
 
        
   
    
    
    
        
</script>
</body>
</html>